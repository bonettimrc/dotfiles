#!/bin/sh

# Wifi
if [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'up' ] ; then
	wifiicon="$(awk '/^\s*w/ { print "ğŸ›œ", int($3 * 100 / 70) "% " }' /proc/net/wireless)"
fi

# Ethernet
if [ "$(cat /sys/class/net/e*/operstate 2>/dev/null)" = 'up' ] 
then
	ethericon="ğŸŒ"
fi

echo "$wifiicon$ethericon"
